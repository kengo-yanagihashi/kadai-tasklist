<% if @tasks.any? %>
<h1 class='mb-3'>タスク一覧</h1>
<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= task.user.name %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div class="d-flex bd-highlight mb-2">
          <div class="pl-3 pr-3 bd-highlight">状態：<%= task.status %></div>
          <div class="pr-3 bd-highlight"><%= link_to 'タスク', task_path(task.id) %>：<%= task.content %></div>
          <div class="pr-1 bd-highlight"><%= link_to '編集', edit_task_path(task.id), class: 'btn btn-light btn-sm' %></div>
          <div class="bd-highlight"><%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-danger btn-sm' %></div>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate @tasks %>
</ul>
<% end %>
<%= link_to '新しくタスクを作成する', new_task_path, class: 'mb-4 btn btn-primary' %>